docker run  -d --name=dns -p 53:53/udp -p 53:53/tcp  internetsystemsconsortium/bind9:9.18
docker exec -it dns /bin/bash
apt-get update
apt-get install nano
apt-get install dnsutils
nano /etc/bind/named.conf

//coller dans named.conf
zone "www.google.com" {
    type master;
    file "/etc/bind/zones/www.google.com.zone";
}

dig @localhost www.google.com
nano /etc/bind/named.conf

//coller dans named.conf
options {
  directory "/var/cache/bind";
  // version statement for security to avoid hacking known weaknesses
  // if the real version number is revealed
  version "not currently available";
  allow-query { any; };
  allow-query-cache { none; };
  recursion no;
};

zone "l1.10.ephec-ti.be." {
  type master;
  file "/etc/bind/l1-10.zone";
  allow-transfer {
    none;
  };
};
